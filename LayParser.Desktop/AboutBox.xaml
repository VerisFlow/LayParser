<Window x:Class="VerisFlow.VenusDeckParser.AboutBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <StackPanel Margin="20">
        <TextBlock Text="LayParser"
                   FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,10,0,5"/>

        <TextBlock x:Name="VersionTextBlock"
                   Text="Version: "
                   FontSize="14"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <TextBlock Text="© 2025 Veris Flow. All Rights Reserved."
                   FontSize="12"
                   HorizontalAlignment="Center" Margin="0,10,0,0"/>

        <TextBlock Text="A simple tool for parsing deck layout files."
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center" Margin="0,10,0,20"/>
    </StackPanel>
</Window>